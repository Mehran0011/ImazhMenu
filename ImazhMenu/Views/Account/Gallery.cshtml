@model Gallery
@{
    Layout = "_AdminPanelLayout";
}
<div class="col-9" id="GallerySection">
    <div class="m-5">
        <h4>افزودن عکس به گالری</h4>
        <div class="card">
            <div class="card-body">
                <form asp-controller="Account" asp-action="Gallery" enctype="multipart/form-data">
                    <div class="row">
                        <div class="form-group col-6 mb-3 d-flex align-items-center mt-5">
                            <label for="exampleFormControlFile1">تصاویر گالری</label>
                            <input type="file" class="form-control-file px-3" name="file" asp-for="ImgUrl" id="exampleFormControlFile1" multiple>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mx-3">ثبت</button>
                </form>
            </div>
        </div>
        <h4 class="mt-3">لیست تصاویر گالری</h4>
        <div class="card">
            <div class="card-body" style="background-color:#ccccb3!important;">
                <table id="tblGalleryData" class="table table-striped table-bordered table-dark pt-4 pb-4" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                تصویر گالری
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/gallery.js"></script>
}