@model Category
@{
    Layout = "_AdminPanelLayout";    
}
<div id="CategorySection">
    <div class="m-5">
        <h4>ایجاد دسته بندی جدید</h4>
        <div class="card mb-5">
            <div class="card-body">
                <form method="post" asp-action="CreateNewCategory">
                    <div class="input-group mb-3">
                        <div class="row align-items-center mx-2">
                            <label> دسته بندی</label>
                        </div>
                        <div class="row">
                            <input asp-for="CactegoryName" type="text" class="form-control" placeholder="دسته بندی را وارد کنید" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mx-3">ثبت</button>
                </form>
            </div>
        </div>      
        <h4>لیست دسته بندی ها</h4>
        <div class="card">
            <div class="card-body" style="background-color:#ccccb3!important;">
                <table id="tblCategoryData" class="table table-striped table-bordered table-dark pt-4 pb-4" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                نام دسته بندی
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script src="~/js/category.js"></script>
}