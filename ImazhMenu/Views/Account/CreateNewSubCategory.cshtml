@model AdminPanelViewModel
@{
    Layout = "_AdminPanelLayout";
}
<div class="col-9" id="SubCategorySection">
    <div class="m-5">
        <h4>ایجاد محصول</h4>
        <div class="card">
            <div class="card-body">
                <form asp-controller="Account" asp-action="CreateNewSubCategory" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <div class="form-group col-6 mb-3">
                            <label for="exampleFormControlSelect2" class="mb-3">دسته بندی محصولات</label>
                            <select class="form-control" name="categoryId" id="exampleFormControlSelect2">
                                <option selected>دسته بندی محصولات را انتخاب کنید...</option>
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.Id">@item.CactegoryName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group col-6 mb-3">
                            <label for="exampleFormControlTextarea1" class="mb-3">محصول</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="SubCactegoryName" placeholder="نام محصول را وارد کنید">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6 mb-3">
                            <label for="exampleFormControlTextarea1" class="mb-3">قیمت محصول</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="Price" placeholder="قیمت محصول را به تومان وارد کنید">
                        </div>
                        <div class="form-group col-6 mb-3 d-flex align-items-center mt-5">
                            <label for="exampleFormControlFile1">تصویر محصول</label>
                            <input type="file" class="form-control-file px-3" name="file" asp-for="SubCatImgUrl" id="exampleFormControlFile1">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-6 mb-3">
                            <label for="exampleFormControlTextarea1" class="mb-3">توضیحات محصول</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" asp-for="Description" placeholder="توضیحات محصول را وارد کنید" style="height:150px;resize:none"></textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mx-3">ثبت</button>
                </form>
            </div>
        </div>
        <h4 class="mt-3">لیست محصولات</h4>
        <div class="card">
            <div class="card-body" style="background-color:#ccccb3!important;">
                <table id="tblSubCategoryData" class="table table-striped table-bordered table-dark pt-4 pb-4" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                تصویر محصول
                            </th>
                            <th>
                                نام محصول
                            </th>
                            <th>
                                قیمت محصول
                            </th>
                            <th>
                                توضیحات
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/subcategory.js"></script>
}